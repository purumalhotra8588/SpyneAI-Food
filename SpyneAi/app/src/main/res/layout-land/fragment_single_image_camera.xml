<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:keepScreenOn="true">


    <ImageView
        android:layout_width="@dimen/dp_80"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:src="@drawable/back"
        android:id="@+id/ivBack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="@dimen/dp_80"
        android:layout_height="0dp"
        android:id="@+id/rvData"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rvData"/>

    <LinearLayout
        android:id="@+id/llCapture"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="end|center"
        android:padding="@dimen/dp_10"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <ImageView
            android:id="@+id/cameraCaptureButton"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/click_effect"
            android:layout_height="0dp"
            android:elevation="2dp" />



    </LinearLayout>

    <com.spyneai.shootapp.ui.base.GyroView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/flLevelIndicator"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/viewFinder"
        app:layout_constraintRight_toLeftOf="@+id/llCapture"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/dp_20">

    </com.spyneai.shootapp.ui.base.GyroView>



    <com.spyneai.camera2.TapFocusExposure
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/flTapToFocus"
        app:layout_constraintLeft_toLeftOf="@+id/viewFinder"
        app:layout_constraintRight_toLeftOf="@+id/llCapture"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </com.spyneai.camera2.TapFocusExposure>
    <View
        android:id="@+id/gridVertical1"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:alpha="0.5"
        android:background="@android:color/white"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="@+id/viewFinder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/viewFinder"/>

    <View
        android:id="@+id/gridVertical2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:alpha="0.5"
        android:background="@android:color/white"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="@+id/viewFinder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.66"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/viewFinder"/>

    <View
        android:id="@+id/gridHorizontal1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:background="@android:color/white"
        android:elevation="2dp"
        app:layout_constraintBottom_toTopOf="@+id/llCapture"
        app:layout_constraintEnd_toEndOf="@+id/flTapToFocus"
        app:layout_constraintStart_toStartOf="@+id/flTapToFocus"
        app:layout_constraintTop_toBottomOf="@+id/flTapToFocus"
        app:layout_constraintVertical_bias="0.33" />

    <View
        android:id="@+id/gridHorizontal2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:background="@android:color/white"
        android:elevation="2dp"
        app:layout_constraintBottom_toTopOf="@+id/llCapture"
        app:layout_constraintEnd_toEndOf="@+id/flTapToFocus"
        app:layout_constraintStart_toStartOf="@+id/flTapToFocus"
        app:layout_constraintTop_toBottomOf="@+id/flTapToFocus"
        app:layout_constraintVertical_bias="0.66" />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupGridLines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="gridVertical1,gridVertical2,gridHorizontal1,gridHorizontal2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rvData"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/black"
        android:id="@+id/clRoot">


        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="70dp"
            android:id="@+id/ivArrow"
            android:src="@drawable/ic_subcat_selection"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="@dimen/dp_100"
            android:layout_marginLeft="@dimen/dp_50"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDescription"
            android:text="@string/select_car_subcategory"
            android:textColor="@color/white"
            android:fontFamily="@font/bold"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_30"
            app:layout_constraintTop_toBottomOf="@id/ivArrow"
           app:layout_constraintLeft_toLeftOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/imgOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="@+id/viewFinder"
        app:layout_constraintLeft_toRightOf="@id/rvData"
        app:layout_constraintRight_toLeftOf="@id/llCapture"
        app:layout_constraintTop_toTopOf="@+id/viewFinder"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"/>

</androidx.constraintlayout.widget.ConstraintLayout>