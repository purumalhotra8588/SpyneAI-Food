<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/clSku"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="@dimen/dp_8">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSkuThumbnail"
        android:layout_width="154dp"
        android:layout_height="115dp"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_5"
        android:layout_margin="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/skuThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/spyne_thumbnail" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/llQcStatus"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/bg_qc_status"
        android:backgroundTint="@color/white_transparent"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:elevation="@dimen/dp_5"
        android:layout_margin="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="@+id/cvSkuThumbnail"
        app:layout_constraintRight_toRightOf="@+id/cvSkuThumbnail">

        <ImageView
            android:id="@+id/ivQcStatus"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_20"
        android:src="@drawable/qc_arrow"
        android:rotation="270"
        app:tint="@color/qc_message"
        android:visibility="gone"
        android:elevation="6dp"
        app:layout_constraintLeft_toLeftOf="@+id/llQcStatus"
        app:layout_constraintRight_toRightOf="@+id/llQcStatus"
        app:layout_constraintTop_toBottomOf="@+id/llQcStatus" />

    <LinearLayout
        android:id="@+id/llQcMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_button_ripple"
        android:backgroundTint="@color/qc_message"
        android:elevation="6dp"
        android:gravity="center"
        android:visibility="gone"
        android:paddingVertical="@dimen/dp_2"
        android:paddingHorizontal="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/llQcStatus"
        app:layout_constraintRight_toRightOf="@id/llQcStatus"
        android:layout_marginTop="@dimen/dp_5">

        <TextView
            android:id="@+id/tvQcStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reshoot Required"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivSkuStatus"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginLeft="@dimen/dp_25"
        app:layout_constraintTop_toTopOf="@+id/cvSkuThumbnail"
        android:src="@drawable/prjcomplete"
        app:layout_constraintLeft_toRightOf="@+id/cvSkuThumbnail" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cvSkuThumbnail"
        app:layout_constraintLeft_toRightOf="@+id/ivSkuStatus"
        android:layout_marginLeft="@dimen/dp_7"
        android:textSize="@dimen/sp_12"
        android:text="Complete"
        android:textColor="@color/complete_prj"
        android:fontFamily="@font/poppins_semibold">
    </TextView>

    <LinearLayout
        android:id="@+id/llrating"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:backgroundTint="@color/complete_prj"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp_5"
        android:background="@drawable/bg_rectangle_button_ripple"
        app:layout_constraintTop_toTopOf="@+id/cvSkuThumbnail"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/sp_10"
            android:text="4.3"></TextView>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_1"
            android:src="@drawable/star"
            ></ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/tvShootName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#6E6E6E"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        android:text="Sku Name: "
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@id/cvSkuThumbnail"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/ivSkuStatus">
    </TextView>

    <TextView
        android:id="@+id/tvSkuNameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/sp_10"
        android:maxLength="22"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@id/cvSkuThumbnail"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/ivSkuStatus"
        android:textColor="#6E6E6E"
        android:fontFamily="@font/poppins_semibold"
        tools:text="Sku Name" />


    <TextView
        android:id="@+id/tvImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/sp_12"
        tools:text="Images: 335"
        android:layout_marginLeft="@dimen/sp_25"
        android:layout_marginTop="@dimen/sp_5"
        app:layout_constraintLeft_toRightOf="@+id/cvSkuThumbnail"
        app:layout_constraintTop_toBottomOf="@+id/tvSkuNameValue"/>


    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/line_separator"
        app:layout_constraintTop_toBottomOf="@+id/tvImages"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintRight_toLeftOf="@+id/ivDownload"
        app:layout_constraintLeft_toRightOf="@+id/cvSkuThumbnail"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/ivDownload"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:src="@drawable/download_prj"
        android:layout_marginRight="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintRight_toRightOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Tue, 29 Jun 2021"
        android:textColor="#6E6E6E"
        android:textSize="@dimen/sp_8"
        android:maxLength="16"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintLeft_toRightOf="@id/cvSkuThumbnail"
        android:layout_marginLeft="@dimen/sp_25"
        android:layout_marginTop="3sp" />


    <TextView
        android:id="@+id/tvCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_10"
        android:layout_marginLeft="@dimen/sp_25"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintLeft_toRightOf="@+id/cvSkuThumbnail"
        android:text="@string/category_label" />

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_10"
        android:layout_marginTop="2dp"
        android:maxLength="18"
        android:maxLines="1"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/categories_text"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        app:layout_constraintLeft_toRightOf="@+id/tvCategories"
        tools:text="Automobile"
        android:layout_marginLeft="5dp"/>


    <View
        android:id="@+id/viewBottom"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/line_separator"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@+id/cvSkuThumbnail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>