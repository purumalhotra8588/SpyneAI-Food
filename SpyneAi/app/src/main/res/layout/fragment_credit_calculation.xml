<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".processedimages.CreditCalculationFragment">


    <TextView
        android:id="@+id/tvTotalImage"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:text="Total Images Clicked"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_25"/>

    <TextView
        android:id="@+id/tvTotalImageCount"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:text="_ Images"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="@dimen/dp_25"
        android:layout_marginHorizontal="@dimen/dp_25" />

    <TextView
        android:id="@+id/tvTotalCost"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:text="Total Cost"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTotalImage"
        android:layout_marginHorizontal="@dimen/dp_25"
        android:layout_marginVertical="@dimen/dp_15"/>

    <TextView
        android:id="@+id/tvTotalCostValue"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:text="_ Credits"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTotalImage"
        android:layout_marginVertical="@dimen/dp_15"
        android:layout_marginHorizontal="@dimen/dp_25" />


    <TextView
        android:id="@+id/tvCreditAvailable"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_14"
        android:text="Credit Available"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTotalCost"
        android:layout_marginHorizontal="@dimen/dp_25"
        android:layout_marginVertical="@dimen/dp_15"/>

    <TextView
        android:id="@+id/tvCreditAvailableValue"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:text="_ Credits"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTotalCost"
        android:layout_marginVertical="@dimen/dp_15"
        android:layout_marginHorizontal="@dimen/dp_25" />




    <com.google.android.material.button.MaterialButton
        android:id="@+id/btDownload"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:text="Download Hd Images"
        android:textAllCaps="false"
        android:textSize="@dimen/sp_16"
        android:enabled="false"
        android:fontFamily="@font/poppins_medium"
        android:insetTop="0dp"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:insetBottom="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCreditAvailable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btBuyCredit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:text="Buy more Credits"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="@dimen/sp_16"
        android:visibility="gone"
        android:fontFamily="@font/poppins_medium"
        android:insetTop="0dp"
        android:layout_marginVertical="@dimen/dp_15"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:insetBottom="0dp"
        android:background="@drawable/bg_border_ripple"
        app:layout_constraintTop_toBottomOf="@+id/btDownload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>