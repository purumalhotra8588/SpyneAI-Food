<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <View
            android:id="@+id/view4"
            android:layout_width="@dimen/dp_55"
            android:layout_height="45dp"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/ic_group"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvInvited"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/you_have_been_invited_to_join_team_spyne"
            android:textColor="#373B54"
            android:textSize="@dimen/sp_22"
            app:layout_constraintEnd_toEndOf="@+id/view4"
            app:layout_constraintStart_toStartOf="@+id/view4"
            app:layout_constraintTop_toBottomOf="@+id/view4" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btJoinTeam"
            android:layout_width="200dp"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/bg_invitation"
            android:backgroundTint="@color/primary"
            android:clickable="false"
            android:elevation="@dimen/dp_5"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Join Team "
            android:layout_marginTop="@dimen/dp_15"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="@+id/tvInvited"
            app:layout_constraintStart_toStartOf="@+id/tvInvited"
            app:layout_constraintTop_toBottomOf="@+id/tvInvited" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btNotNow"
            android:layout_width="200dp"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_invitation"
            android:backgroundTint="@color/black"
            android:clickable="false"
            android:elevation="@dimen/dp_5"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Not Now "
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/btJoinTeam" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>