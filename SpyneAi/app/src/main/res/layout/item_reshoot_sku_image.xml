<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="125dp"
    android:layout_height="120dp"
    android:layout_marginLeft="@dimen/dp_5"
    android:background="@drawable/bg_rectangle_button_ripple"
    android:backgroundTint="@color/grey5"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvImage"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:elevation="@dimen/dp_7"
        android:layout_margin="@dimen/dp_2"
        app:cardCornerRadius="@dimen/dp_7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/ivImage"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:src="@drawable/app_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/llQcStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_2"
        android:padding="@dimen/dp_2"
        android:background="@drawable/bg_rectangle_button_ripple"
        android:backgroundTint="#F4E7E7"
        android:orientation="horizontal"
        android:visibility="visible"
        android:elevation="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/cvImage">

        <ImageView
            android:id="@+id/ivQcStatus"
            android:layout_width="17dp"
            android:layout_height="17dp"
            app:tint="@color/text_red"
            android:src="@drawable/i" />

        <TextView
            android:id="@+id/tvReshootComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_5"/>


    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>