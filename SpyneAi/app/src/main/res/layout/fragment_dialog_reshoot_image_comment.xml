<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_15"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/bg_reshoot_comment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image 2/4"
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/tvImagesCount"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Shoot angle : 45"
            android:id="@+id/tvShootAngle"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/primary"
            android:textSize="@dimen/sp_12"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvImagesCount"/>


        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:id="@+id/ivBefore"
            android:layout_marginRight="@dimen/dp_2"
            android:scaleType="centerInside"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/tvShootAngle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivAfter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/ivBefore"
            android:text="Before"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/bg_reshoot_before_after"
            app:layout_constraintBottom_toBottomOf="@id/ivBefore"/>

        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:id="@+id/ivAfter"
            android:scaleType="centerInside"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/tvShootAngle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ivBefore"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/ivAfter"
            android:text="After"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/bg_reshoot_before_after"
            app:layout_constraintBottom_toBottomOf="@id/ivAfter"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCommentTitle"
            app:layout_constraintTop_toBottomOf="@id/ivBefore"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Comment"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvComment"
            app:layout_constraintTop_toBottomOf="@id/tvCommentTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="#3F414E"
            android:fontFamily="@font/poppins_regular"
            tools:text="shoot angle is incorrect.  make sure shoot at 45."
            android:background="@drawable/bg_reshoot_comment_border"/>
        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:padding="@dimen/dp_10"
            android:src="@drawable/close_dialog"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/primary" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
