<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ShowGifActivity"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llToolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_toolbar"
            android:backgroundTint="@color/primary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivHomeShowImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingVertical="@dimen/dp_10"
                android:src="@mipmap/home"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_horizontal"
                android:text="@string/your_images"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_20"
                    android:visibility="gone"
                    android:id="@+id/llNerfThreeSixtyView">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="@dimen/sp_16"
                        android:text="Spyne Nerf 360Â°  (beta)"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.spyneai.threesixty.ui.ThreeSixtyView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_200"
                            android:id="@+id/nerffThreeSixtyView"
                            android:layout_marginRight="25dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="@dimen/dp_10"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/nerffThreeSixtyView"
                            app:layout_constraintRight_toRightOf="@id/nerffThreeSixtyView"
                            android:id="@+id/clNerfFront"
                            android:elevation="3dp"
                            android:visibility="invisible"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_5"
                            android:background="@drawable/bg_exterior_share">

                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:src="@drawable/ic_noun_share"
                                android:padding="@dimen/dp_5"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:id="@+id/ivNerfShare"/>

                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:id="@+id/ivNerfEmbed"
                                android:src="@drawable/ic_noun_embed"
                                app:layout_constraintRight_toLeftOf="@id/ivNerfShare"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginRight="5dp"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>



                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tvNotSatisfied"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_gravity="end"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:text="Not Satisfied ?" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_20"
                    android:visibility="gone"
                    android:id="@+id/llThreeSixtyView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="@dimen/sp_16"
                            android:text="Exterior 360 view"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchEdited"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_20"
                            app:track="@drawable/switch_nerf"
                            android:checked="true"
                            android:visibility="gone"
                            android:thumb="@drawable/thumb_selector"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvSkuName"
                            app:layout_constraintBottom_toBottomOf="@+id/tvSkuName" />


                    </LinearLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.spyneai.threesixty.ui.ThreeSixtyView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_200"
                            android:id="@+id/threeSixtyView"
                            android:layout_marginRight="25dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="@dimen/dp_10"
                            android:visibility="invisible"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <com.spyneai.threesixty.ui.ThreeSixtyView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_200"
                            android:id="@+id/nerfThreeSixtyView"
                            android:layout_marginRight="25dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="@dimen/dp_10"
                            android:visibility="visible"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="@id/threeSixtyView"
                            app:layout_constraintRight_toRightOf="@id/threeSixtyView"
                            android:id="@+id/cl_front"
                            android:elevation="3dp"
                            android:visibility="invisible"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_5"
                            android:background="@drawable/bg_exterior_share">

                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:src="@drawable/ic_noun_share"
                                android:padding="@dimen/dp_5"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:id="@+id/ivShare"/>

                            <ImageView
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:id="@+id/ivEmbed"
                                android:src="@drawable/ic_noun_embed"
                                app:layout_constraintRight_toLeftOf="@id/ivShare"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginRight="5dp"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvYourEmailIdReplaced"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/exterior"
                    android:textColor="@color/primary"
                    android:fontFamily="@font/medium"
                    android:layout_margin="@dimen/dp_10"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:id="@+id/llBeforeAfterImages"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="@string/before"
                            android:textSize="@dimen/sp_20"
                            android:textColor="@color/black"
                            android:fontFamily="@font/medium"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="@string/after"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_20"
                            android:fontFamily="@font/medium"/>

                    </LinearLayout>

                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvImagesBackgroundRemoved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_three_sixty_view"
                    android:text="View 360Â° Interior Shot"
                    android:textColor="@color/primary"
                    android:visibility="gone"
                    android:fontFamily="@font/medium"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_15"
                    android:layout_margin="@dimen/dp_10"
                    android:drawablePadding="@dimen/dp_10"
                    app:drawableRightCompat="@mipmap/move" />

                <TextView
                    android:id="@+id/tvInterior"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/interior"
                    android:textColor="@color/primary"
                    android:fontFamily="@font/medium"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvInteriors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"/>

                <TextView
                    android:id="@+id/tvFocused"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/focused"
                    android:textColor="@color/primary"
                    android:fontFamily="@font/medium"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFocused"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_10">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/clDownloadImages"
                android:layout_margin="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:id="@+id/llWatermark"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/bg_rectangle_button_ripple"
                    android:backgroundTint="@color/primary_light_dark"
                    android:layout_marginRight="@dimen/dp_3"
                    app:layout_constraintRight_toLeftOf="@id/llDownloadHdImages">

                    <TextView
                        android:id="@+id/tvDownloadFree"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/medium"
                        android:padding="@dimen/dp_5"
                        android:gravity="center"
                        android:text="@string/download_free"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDownloadHdImages"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_5"
                    android:visibility="gone"
                    android:background="@drawable/bg_downloadall"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_3"
                    app:layout_constraintTop_toTopOf="@+id/llWatermark"
                    app:layout_constraintBottom_toBottomOf="@+id/llWatermark"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/llWatermark">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:text="@string/download_hd_images"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16" />


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:id="@+id/tvReshoot"
                android:gravity="center"
                android:visibility="gone"
                android:textAllCaps="false"
                android:text="@string/reshoot_specific"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
               android:layout_marginHorizontal="@dimen/dp_30"
                android:layout_marginVertical="@dimen/dp_10"
                android:background="@drawable/bg_skip" />

        </LinearLayout>


    </LinearLayout>




</LinearLayout>