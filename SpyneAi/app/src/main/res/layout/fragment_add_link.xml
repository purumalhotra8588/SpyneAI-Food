<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent" />-->


        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/rlEnterEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="36dp"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_background">


            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:singleLine="true"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_signup_edit_text"
                android:fontFamily="@font/poppins_medium"
                android:hint="Add Email To Invite"
                android:padding="@dimen/dp_12"
                android:maxLines="1"
                android:imeOptions="actionDone"
                android:textColor="@color/black"
                android:textColorHint="@color/edit_text_hint"
                android:textSize="@dimen/sp_12"
                tools:ignore="MissingConstraints" />

            <View
                android:id="@+id/addButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintTop_toTopOf="@id/edtEmail"
                app:layout_constraintBottom_toBottomOf="@id/edtEmail"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@drawable/baseline_add_circle_outline_24"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dp_5"
            android:layout_margin="@dimen/dp_15"
            app:layout_constraintBottom_toTopOf="@+id/btSentOtp"
            app:layout_constraintEnd_toEndOf="@+id/rlEnterEmail"
            app:layout_constraintStart_toStartOf="@+id/rlEnterEmail"
            app:layout_constraintTop_toBottomOf="@+id/rlEnterEmail"
            tools:ignore="MissingConstraints" />


        <!--    <com.google.android.material.button.MaterialButton-->
        <!--        android:id="@+id/btadd"-->
        <!--        android:layout_width="@dimen/dp_200"-->
        <!--        android:layout_height="@dimen/dp_40"-->
        <!--        android:background="@drawable/bg_invitation"-->
        <!--        android:backgroundTint="@color/primary"-->
        <!--        android:clickable="false"-->
