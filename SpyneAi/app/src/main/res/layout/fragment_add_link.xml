        <com.google.android.material.button.MaterialButton
            android:id="@+id/btSentOtp"
            android:layout_width="175dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_invitation"
            android:backgroundTint="@color/primary"
            android:clickable="false"
            android:elevation="@dimen/dp_5"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Send Invitation link"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="@+id/rlEnterEmail"
            app:layout_constraintStart_toStartOf="@+id/rlEnterEmail"
            app:layout_constraintTop_toBottomOf="@id/chipGroup" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btSent"
            android:layout_width="125dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="25dp"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/bg_invitation"
            android:backgroundTint="@color/primary"
            android:clickable="false"
            android:elevation="@dimen/dp_5"
            android:visibility="gone"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Add Email"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toStartOf="@+id/btSentOtp"
            app:layout_constraintStart_toStartOf="@+id/rlEnterEmail"
            app:layout_constraintTop_toBottomOf="@id/chipGroup" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>