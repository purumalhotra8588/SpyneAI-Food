<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@color/transparent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:background="@drawable/bg_item_before_after"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:cardCornerRadius="5dp"
            android:elevation="@dimen/dp_2"
            android:id="@+id/cvBefore"
            android:layout_marginBottom="@dimen/dp_10">


                <ImageView
                    android:id="@+id/ivBefore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    tools:background="@color/grey"/>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/cvAfter"
            android:layout_gravity="center"
            android:backgroundTint="#F0F0F0"
            android:elevation="@dimen/dp_2">

            <ImageView
                android:id="@+id/ivBlurThumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/whiteBlur"
                android:scaleType="fitXY" />
                <ImageView
                    android:id="@+id/ivCategoryThumbnail"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="30dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_car"/>

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieCircularAnimation"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_gravity="center"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/circular_animation" />


            <ImageView
                android:id="@+id/ivAfter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:visibility="gone"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>