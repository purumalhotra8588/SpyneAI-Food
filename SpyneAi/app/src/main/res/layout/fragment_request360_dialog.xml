<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@null">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_20"
        android:background="@drawable/base_dialog_outline">


        <ImageView
            android:id="@+id/ivWarning"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/warning"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvNerf">
        </ImageView>

        <TextView
            android:id="@+id/tvNerf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Nerf is Beta, it may have broken"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/dp_5"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toTopOf="@+id/ivWarning"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/ivWarning" />

        <TextView
            android:id="@+id/tv360"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request for Non-Nerf Output."
            android:textColor="@color/gray_text"
            android:layout_marginStart="@dimen/dp_5"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@+id/ivWarning"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRequest"
            android:text="Request"
            android:textAllCaps="false"
            android:insetTop="@dimen/dp_3"
            android:insetBottom="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_60"
            android:paddingRight="@dimen/dp_60"
            android:background="@drawable/bg_round_button_ripple"
            android:backgroundTint="@color/primary_light_dark"
            app:backgroundTint="@null"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@+id/tv360"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
