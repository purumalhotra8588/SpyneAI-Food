        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llEnterProjectName"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_height="77dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivClose"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:background="@drawable/bg_edit_text"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingVertical="@dimen/dp_5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProjectName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:background="@null"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvEnterProjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="7dp"
                android:background="#FFF"
                android:paddingHorizontal="@dimen/dp_5"
                android:textColor="@color/gray_text"
                android:fontFamily="@font/poppins_medium"
                android:text="Enter Restaurant name"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llCity"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="77dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llEnterProjectName">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:background="@drawable/bg_edit_text"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingVertical="@dimen/dp_5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSkuName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/sp_12"
                    android:background="@null" />

                <ImageView
                    android:id="@+id/ivBarCode"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_30"
                    android:src="@drawable/barcode"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:visibility="gone"
                    android:layout_gravity="end|center_vertical"
                    app:tint="@color/primary_light_dark">
                </ImageView>
            </LinearLayout>

            <TextView
                android:id="@+id/tvEnterSkuName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="7dp"
                android:background="#FFF"
                android:paddingHorizontal="@dimen/dp_5"
                android:textColor="@color/gray_text"
                android:fontFamily="@font/poppins_medium"
                android:text="Enter Dish name"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llCity"
        app:layout_constraintStart_toStartOf="@+id/llCity"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnProceed"
        android:text="Proceed"
        android:textAllCaps="false"
        app:cornerRadius="@dimen/dp_25"
        android:insetTop="@dimen/dp_3"
        android:insetBottom="@dimen/dp_3"
        android:paddingLeft="@dimen/dp_60"
        android:paddingRight="@dimen/dp_60"
        android:fontFamily="@font/poppins_medium"
        android:backgroundTint="@color/primary_light_dark"
        app:layout_constraintTop_toBottomOf="@+id/llContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/dp_25" />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupRID"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:constraint_referenced_ids="llContainer, btnProceed" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>