<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clBackground"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/dp_4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvImage"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:cardCornerRadius="@dimen/dp_10"
        android:elevation="@dimen/dp_5"
        app:layout_constraintDimensionRatio="4:3"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/spyne_thumbnail"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_5"
        android:ellipsize="end"
        android:padding="@dimen/dp_1"
        android:singleLine="true"
        android:fontFamily="@font/poppins_medium"
        android:maxLength="17"
        app:layout_constraintRight_toLeftOf="@id/llOngoing"
        android:paddingHorizontal="@dimen/dp_2"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/cvImage"
        app:layout_constraintTop_toBottomOf="@+id/cvImage"
        tools:text="Project Name" />


    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:maxLength="10"
        android:paddingHorizontal="@dimen/dp_2"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProject"
        tools:hint="24/07/2021" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:hint="04:44"
        android:paddingHorizontal="@dimen/dp_2"
        android:fontFamily="@font/poppins_light"
        android:textSize="10sp"
        android:visibility="gone"
        android:maxLength="5"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/clBackground"
        android:layout_marginRight="3dp"
        app:layout_constraintTop_toBottomOf="@+id/tvProject"
        android:layout_marginTop="4dp" />


    <LinearLayout
        android:id="@+id/llOngoing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp_2"
        app:layout_constraintLeft_toLeftOf="@+id/cvImage"
        app:layout_constraintTop_toTopOf="@+id/tvDate"
        app:layout_constraintBottom_toBottomOf="@+id/tvDate">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivStatus"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                tools:src="@drawable/ic_completed" />

        </FrameLayout>


        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:fontFamily="@font/medium"
            android:textColor="@color/primary"
            android:textSize="10dp"
            tools:text="@string/ongoing" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llFailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/cvImage"
        app:layout_constraintLeft_toRightOf="@+id/tvProject"
        app:layout_constraintEnd_toEndOf="@+id/clBackground"
        android:layout_marginLeft="@dimen/dp_1"
        android:layout_marginVertical="@dimen/dp_5"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@drawable/ic_report"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/red"
            android:fontFamily="@font/medium"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="@string/failed" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llQcStatus"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/bg_qc_status"
        android:backgroundTint="@color/white_transparent"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:elevation="@dimen/dp_5"
        android:layout_margin="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="@+id/cvImage"
        app:layout_constraintRight_toRightOf="@+id/cvImage">

        <ImageView
            android:id="@+id/ivQcStatus"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_20"
        android:src="@drawable/qc_arrow"
        android:rotation="270"
        app:tint="@color/qc_message"
        android:visibility="gone"
        android:elevation="6dp"
        app:layout_constraintLeft_toLeftOf="@+id/llQcStatus"
        app:layout_constraintRight_toRightOf="@+id/llQcStatus"
        app:layout_constraintTop_toBottomOf="@+id/llQcStatus" />

    <LinearLayout
        android:id="@+id/llQcMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_button_ripple"
        android:backgroundTint="@color/qc_message"
        android:elevation="6dp"
        android:gravity="center"
        android:visibility="gone"
        android:paddingVertical="@dimen/dp_2"
        android:paddingHorizontal="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/llQcStatus"
        app:layout_constraintRight_toRightOf="@id/llQcStatus"
        android:layout_marginTop="@dimen/dp_5">

        <TextView
            android:id="@+id/tvQcStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>