<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/clSku"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/dp_13"
    android:layout_marginHorizontal="@dimen/dp_10">

    <androidx.cardview.widget.CardView
        android:id="@+id/skuThumbnailCard"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginHorizontal="@dimen/dp_2"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/skuThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/spyne_thumbnail" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/dp_4"
            android:background="@drawable/bg_rectangle_button_ripple"
            android:backgroundTint="@color/white_transparent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_3">


            <ImageView
                android:id="@+id/ivSkuStatus"
                android:layout_width="17sp"
                android:layout_height="17sp"
                android:src="@drawable/prjcomplete"
                app:layout_constraintLeft_toRightOf="@+id/skuThumbnailCard"
                app:layout_constraintTop_toTopOf="@+id/skuThumbnailCard" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sp_7"
                android:fontFamily="@font/poppins_semibold"
                android:text="Complete"
                android:textColor="@color/complete_prj"
                android:textSize="@dimen/sp_10"
                app:layout_constraintLeft_toRightOf="@+id/ivProjectStatus"
                app:layout_constraintTop_toTopOf="@id/skuThumbnailCard" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llrating"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_margin="@dimen/dp_4"
            android:background="@drawable/bg_rectangle_button_ripple"
            android:backgroundTint="@color/complete_prj"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal"
            android:padding="@dimen/dp_3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/skuThumbnailCard">

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="4.3"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"></TextView>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="@dimen/dp_2"
                android:src="@drawable/star"></ImageView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/llQcStatus"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/bg_qc_status"
        android:backgroundTint="@color/white_transparent"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:elevation="@dimen/dp_5"
        android:layout_margin="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="@+id/skuThumbnailCard"
        app:layout_constraintRight_toRightOf="@+id/skuThumbnailCard">

        <ImageView
            android:id="@+id/ivQcStatus"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_20"
        android:src="@drawable/qc_arrow"
        android:rotation="270"
        app:tint="@color/qc_message"
        android:visibility="gone"
        android:elevation="6dp"
        app:layout_constraintLeft_toLeftOf="@+id/llQcStatus"
        app:layout_constraintRight_toRightOf="@+id/llQcStatus"
        app:layout_constraintTop_toBottomOf="@+id/llQcStatus" />

    <LinearLayout
        android:id="@+id/llQcMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_button_ripple"
        android:backgroundTint="@color/qc_message"
        android:elevation="6dp"
        android:gravity="center"
        android:visibility="gone"
        android:paddingVertical="@dimen/dp_2"
        android:paddingHorizontal="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/llQcStatus"
        app:layout_constraintRight_toRightOf="@id/llQcStatus"
        android:layout_marginTop="@dimen/dp_5">

        <TextView
            android:id="@+id/tvQcStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reshoot Required"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvShootName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_7"
        android:fontFamily="@font/poppins_medium"
        android:text="Sku Name: "
        android:visibility="gone"
        android:textColor="#6E6E6E"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@id/skuThumbnailCard"
        app:layout_constraintTop_toBottomOf="@+id/skuThumbnailCard" />

    <TextView
        android:id="@+id/tvSkuNameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_7"
        android:fontFamily="@font/poppins_semibold"
        tools:text="Sku Name"
        android:singleLine="true"
        android:maxLength="22"
        android:ellipsize="end"
        android:textColor="#6E6E6E"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@+id/skuThumbnailCard"
        app:layout_constraintTop_toBottomOf="@+id/skuThumbnailCard" />

    <TextView
        android:id="@+id/tvImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@+id/skuThumbnailCard"
        app:layout_constraintTop_toBottomOf="@+id/tvSkuNameValue"
        tools:text="Images: 335" />


    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:background="@color/line_separator"
        app:layout_constraintLeft_toLeftOf="@+id/skuThumbnailCard"
        app:layout_constraintRight_toLeftOf="@+id/ivDownload"
        app:layout_constraintTop_toBottomOf="@+id/tvImages" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:fontFamily="@font/poppins_medium"
        android:maxLength="16"
        android:textColor="#6E6E6E"
        android:textSize="@dimen/sp_8"
        app:layout_constraintLeft_toLeftOf="@id/skuThumbnailCard"
        app:layout_constraintTop_toBottomOf="@+id/view"
        tools:text="Tue, 29 Jun 2021" />

    <TextView
        android:id="@+id/tvCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/category_label"
        android:textSize="@dimen/sp_10"
        app:layout_constraintLeft_toLeftOf="@+id/skuThumbnailCard"
        app:layout_constraintTop_toBottomOf="@+id/tvDate" />

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins_medium"
        android:maxLength="13"
        android:textColor="@color/categories_text"
        android:textSize="@dimen/sp_10"
        app:layout_constraintLeft_toRightOf="@+id/tvCategories"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        tools:text="Automobile" />

    <ImageView
        android:id="@+id/ivDownload"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:src="@drawable/download_prj"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"></ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>